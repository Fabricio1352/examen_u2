<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Principal">

    <Button
        android:id="@+id/btnDetalles"
        android:layout_width="176dp"
        android:layout_height="0dp"
        android:layout_marginBottom="31dp"
        android:background="#E35B6F"
        android:text="Detalles"
        app:layout_constraintBottom_toTopOf="@+id/btnGlobos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnGlobos"
        android:layout_width="176dp"
        android:layout_height="0dp"
        android:layout_marginBottom="51dp"
        android:background="#E35B6F"
        android:text="Globos"
        app:layout_constraintBottom_toTopOf="@+id/btnPeluches"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDetalles" />

    <Button
        android:id="@+id/btnPeluches"
        android:layout_width="176dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:background="#E35B6F"
        android:text="Peluches"
        app:layout_constraintBottom_toTopOf="@+id/btnRegalos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGlobos" />

    <Button
        android:id="@+id/btnRegalos"
        android:layout_width="176dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:background="#E35B6F"
        android:text="Regalos"
        app:layout_constraintBottom_toTopOf="@+id/btnTazas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPeluches" />

    <Button
        android:id="@+id/btnTazas"
        android:layout_width="176dp"
        android:layout_height="0dp"
        android:layout_marginBottom="83dp"
        android:background="#E35B6F"
        android:text="Tazas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegalos" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDetalles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grupo2" />
</androidx.constraintlayout.widget.ConstraintLayout>